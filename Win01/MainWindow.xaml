<Window x:Class="Win01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:x1="clr-namespace:Win01"
        Title="MainWindow" Height="525" Width="700" WindowStartupLocation="CenterScreen">
    <!--Comandos para shortKeys en Nuevo y Panel Izquierdo-->
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" CanExecute="checkNewGame" Executed="newGame"/>
        <CommandBinding Command="ApplicationCommands.Paste" CanExecute="checkNewGame" Executed="newGame"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top" Background="#FFB8B4B4">
            <MenuItem Header="_Fichero" FontSize="14">
                <MenuItem Header="Nuevo" Command="ApplicationCommands.New"/>
            </MenuItem>
            <MenuItem Header="_Ver" FontSize="14">
                <MenuItem Header="_Panel Izquierdo" IsCheckable="True" IsChecked="True"
                          Command="ApplicationCommands.Paste"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Background="#FFB8B4B4">
            <StatusBarItem>
                <TextBlock Text="hola"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
